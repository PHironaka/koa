

{%- assign blog = blogs[section.settings.blog] -%}
<div class=" blog-header product-collection--intro">
<h3>EXPLORE THE JOURNAL </h3>
</div>
<div id="center" class="my-slider">

  {% for article in blog.articles  %}
<div >
  <a href="{{ article.url }}">
    <h4>{{ article.title }}</h4> </a>
    <img src="{{ article.image | img_url: '1024x1024' }}" alt="{{ article.title | escape }}" />
   
</div>    
{% endfor %}

</div>

<a class="blog-read" href="/blogs/industry-of-all-nations"> Read More </a>





{% schema %}
  {
    "name": "Featured Blog",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Blog"
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },

       {
                "type": "range",
                "id": "post_limit",
                "label": "Posts",
                "min": 1,
                "max": 3,
                "step": 1,
                "default": 3
            }
    ],
    "presets": [
      {
        "name": "Featured Blog",
        "category": "Blog",
         "settings": {
                    "blog": "Koa News"
                }
      }
    ]
  }

{% endschema %}
